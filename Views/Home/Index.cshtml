@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-section">
    <h1>Selamat Datang di Rental Mobil Kami</h1>

    <div class="search-box">
        <div class="search-grid">
            <div class="search-item">
                <label>Pickup Date:</label>
                <input type="date" class="form-control" placeholder="Select Pickup Date">
            </div>
            <div class="search-item">
                <label>Return Date:</label>
                <input type="date" class="form-control" placeholder="Select Return Date">
            </div>
            <div class="search-item">
                <label>Filter Tahun Pembuatan</label>
                <select class="form-control">
                    <option>Semua Tahun</option>
                </select>
            </div>
        </div>
        <div class="search-button">
            <a class="cari-button" asp-controller="Car" asp-action="List">Cari</a>
        </div>
    </div>
    <div class="sorted">
        <label> Sortir Berdasarkan</label>
        <select>
            <option value="LH">Terendah-Tertinggi</option>
            <option value="HL">Tertinggi-Terendah</option>
        </select>
    </div>
</div>
